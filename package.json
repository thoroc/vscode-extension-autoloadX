{
  "name": "vscode-extension-autoloadx",
  "version": "0.0.2",
  "type": "module",
  "description": "A VSCode extension for autoloading extensions",
  "repository": "https://github.com/thoroc/vscode-extension-autoloadX",
  "author": "Thomas Roche",
  "publisher": "thoroc",
  "license": "MIT",
  "engines": {
    "vscode": "^1.1.37"
  },
  "scripts": {
    "build": "tsc",
    "format": "npx prettier --write 'src/**/*.ts'",
    "format:check": "npx prettier --check 'src/**/*.ts'",
    "format:config": "npx prettier --write '{*.yml,*.json}'",
    "format:docs": "npx prettier --write '**/*.md'",
    "format:pkg": "npx prettier --write package.json",
    "lint": "npx eslint . --ext .ts,.js",
    "lint:docs": "npx markdownlint-cli2 \"**/*.md\" \"#node_modules\" \"#.gitlab/**/*.md\"",
    "lint:eslint": "npx eslint . --ext .ts,.js --config eslint.config.js",
    "lint:lockfile": "npx lockfile-lint --path package-lock.json --allowed-hosts registry.npmjs.org --allowed-schemes https:",
    "knip": "npx knip --reporter compact",
    "package": "npx vsce package --out dist/",
    "postinstall": "npx lefthook install",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "knip": "^5.62.0",
    "lefthook": "^1.12.3",
    "lockfile-lint": "^4.14.1",
    "markdownlint-cli2": "^0.18.1",
    "prettier": "^3.6.2",
    "prettier-plugin-pkg": "^0.21.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "vscode": "^1.1.34"
  }
}

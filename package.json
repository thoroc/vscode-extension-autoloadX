{
  "name": "vscode-extension-autoloadx",
  "version": "0.0.2",
  "description": "A VSCode extension for autoloading extensions",
  "repository": "https://github.com/thoroc/vscode-extension-autoloadX",
  "author": "Thomas Roche",
  "publisher": "thoroc",
  "license": "MIT",
  "engines": {
    "vscode": "^1.1.37"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --check 'src/**/*.ts'",
    "format:config": "prettier --check '{*.yml,*.json}'",
    "format:docs": "prettier --check '*.md'",
    "format:pkg": "prettier --write package.json",
    "lint": "eslint . --ext .ts,.js",
    "lint:docs": "markdownlint-cli2 '**/*.md'",
    "lint:eslint": "eslint . --ext .ts,.js",
    "lint:lockfile": "lockfile-lint --path package-lock.json --allowed-hosts registry.npmjs.org --allowed-schemes https:",
    "lint:prettier": "prettier --check .",
    "lint:unused": "knip --report summary",
    "package": "vsce package --out dist/",
    "postinstall": "npx lefthook install",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.0.5",
    "knip": "^5.62.0",
    "lefthook": "^1.12.3",
    "lockfile-lint": "^4.14.1",
    "markdownlint-cli2": "^0.18.1",
    "mkdirp": "^3.0.1",
    "mocha": "^11.7.1",
    "prettier": "^3.6.2",
    "prettier-plugin-pkg": "^0.21.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "vsce": "^2.15.0",
    "vscode": "^1.1.37"
  }
}